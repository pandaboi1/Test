<html>

<head>
<title>A Form Example</title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>

<body>

<div class="container">

<div class="row my-4">
	<div class="">
		<div class="card w-100 mt-3">
			<div class="card-body">
				<%if (locals.error) { %>
					<div class="alert alert-danger" role="alert">
						A simple danger alertâ€”check it out!
						<%=error%>
					  </div>
				<% } %>
				<form action="/response/123" method="POST">
					<div class="p-2">
					 	<input type="textbox" class="form-control mb-1" name="name"/>
					 </div>
					 <div class="p-2">
						<select class="form-select" name="number" aria-label="Default select example">
							<option value="1">One</option>
							<option value="2">Two</option>
							<option value="3">Three</option>
						</select>
					</div>
					<div class="p-2">
						<div class="form-check">
							<input class="form-check-input" type="checkbox" name="Doit" value="thecheckvalue">
							<label class="form-check-label">
							This is a checkbox
							</label>
						</div>
					</div>
					<div class="p-2">
						<div class="form-check">
							<input class="form-check-input" type="radio" name="myradio 1" value="radioval1">
							<label class="form-check-label">
							  Radio option one
							</label>
						</div>
						<div class="form-check">
							<input class="form-check-input" type="radio" name="myradio 2" value="radioval2">
							<label class="form-check-label">
							  Radio option two
							</label>
						</div>
					<div class="pt-4">
						<button type="submit" class="btn btn-primary">Submit</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

</div>

</body>

</html>
